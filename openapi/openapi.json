{
    "openapi": "3.1.0",
    "info": {
        "title": "SuiteManager Public API",
        "description": "API pública del motor de reservas SuiteManager para integración con agentes de IA como ChatGPT, Gemini y Claude.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://suite-manager.onrender.com/api/public"
        }
    ],
    "paths": {
        "/propiedades": {
            "get": {
                "summary": "Lista todas las propiedades registradas en SuiteManager",
                "operationId": "listarPropiedades",
                "responses": {
                    "200": {
                        "description": "Listado de propiedades disponibles"
                    }
                }
            }
        },
        "/propiedades/{id}": {
            "get": {
                "summary": "Obtiene la información detallada de una propiedad",
                "operationId": "detallePropiedad",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Datos detallados de la propiedad"
                    }
                }
            }
        },
        "/propiedades/{id}/imagenes": {
            "get": {
                "summary": "Obtiene las imágenes de una propiedad",
                "operationId": "imagenesPropiedad",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Imágenes asociadas a la propiedad"
                    }
                }
            }
        },
        "/propiedades/{id}/disponibilidad": {
            "get": {
                "summary": "Consulta disponibilidad de una propiedad",
                "operationId": "disponibilidadPropiedad",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "fechaInicio",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    {
                        "name": "fechaFin",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Disponibilidad de la propiedad en el rango solicitado"
                    }
                }
            }
        },
        "/propiedades/{id}/cotizar": {
            "get": {
                "summary": "Genera una cotización para una propiedad",
                "operationId": "cotizarPropiedad",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "fechaInicio",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    {
                        "name": "fechaFin",
                        "in": "query",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "date"
                        }
                    },
                    {
                        "name": "adultos",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "menores",
                        "in": "query",
                        "required": false,
                        "schema": {
                            "type": "integer"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Detalle de cotización"
                    }
                }
            }
        },
        "/reservas": {
            "post": {
                "summary": "Crea una reserva definitiva o una reserva desde IA",
                "operationId": "crearReserva",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "propiedadId": {
                                        "type": "string"
                                    },
                                    "fechaInicio": {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "fechaFin": {
                                        "type": "string",
                                        "format": "date"
                                    },
                                    "adultos": {
                                        "type": "integer"
                                    },
                                    "menores": {
                                        "type": "integer"
                                    },
                                    "cliente": {
                                        "type": "object",
                                        "properties": {
                                            "nombre": {
                                                "type": "string"
                                            },
                                            "email": {
                                                "type": "string"
                                            },
                                            "telefono": {
                                                "type": "string"
                                            }
                                        }
                                    },
                                    "origen": {
                                        "type": "string",
                                        "example": "chatgpt"
                                    }
                                },
                                "required": [
                                    "propiedadId",
                                    "fechaInicio",
                                    "fechaFin",
                                    "cliente"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Reserva creada correctamente"
                    }
                }
            }
        }
    }
}