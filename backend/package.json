    "@google/generative-ai": "^0.24.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "date-fns": "^3.0.0",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.9",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "firebase-admin": "^12.1.0",
    "google-auth-library": "^9.4.1",
    "googleapis": "^128.0.0",
    "multer": "^1.4.5-lts.1",
    "node-ical": "^0.16.0",
    "sharp": "^0.34.4",
    "xlsx": "^0.18.5"
  },
