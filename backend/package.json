{
  "name": "staymanager-backend",
  "version": "1.0.0",
  "description": "Backend for StayManager",
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node index.js",
    "build:css": "tailwindcss -i ../frontend/public/css/source.css -o ../frontend/public/css/style.css && echo 'Admin CSS build completed.'",
    "build:website-css": "tailwindcss -i ./public/css/website-source.css -o ./public/css/website.css && echo 'Website CSS build completed.'",
    "build": "npm run build:css && npm run build:website-css"
  },
