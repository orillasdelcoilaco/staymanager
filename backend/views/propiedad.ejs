<%- /* backend/views/propiedad.ejs */ %>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <% const pageTitle = `${propiedad.nombre} | ${empresa.nombre}`; %>
    <% const pageDescription = (propiedad.websiteData?.aiDescription || propiedad.descripcion || `Descubre ${propiedad.nombre}`).substring(0, 155); %>
    <title><%= pageTitle %></title>
    <meta name="description" content="<%= pageDescription %>">
    <link rel="stylesheet" href="/public/css/website.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    <%- include('partials/header') %>

    <main class="container py-8 md:py-12"> <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2"><%= propiedad.nombre %></h1>
        <p class="text-sm text-gray-600 mb-6">Capacidad: hasta <%= propiedad.capacidad %> personas</p>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 md:gap-12">

            <div class="lg:col-span-2 space-y-8">

                <%
                   const imagenes = propiedad.websiteData?.images || {};
                   const imagenPrincipal = propiedad.websiteData?.cardImage || Object.values(imagenes).flat()[0]; // Usar cardImage primero
                   const galeriaImagenes = Object.values(imagenes).flat().filter(img => img?.imageId !== imagenPrincipal?.imageId); // Excluir principal si existe
                %>
                <% if (imagenPrincipal && imagenPrincipal.storagePath) { %>
                    <div class="rounded-lg overflow-hidden shadow-lg"> <picture>
                             <source srcset="<%= imagenPrincipal.storagePath %>" type="image/webp">
                             <img src="<%= imagenPrincipal.storagePath %>"
                                  alt="<%= imagenPrincipal.altText %>"
                                  title="<%= imagenPrincipal.title || '' %>"
                                  class="w-full h-auto max-h-[60vh] object-cover" loading="eager"> </picture>
                    </div>
                <% } else { %>
                     <div class="w-full h-96 bg-gray-200 flex items-center justify-center rounded-lg shadow-lg text-gray-500">Imagen Principal No Disponible</div>
                <% } %>

                <% if (galeriaImagenes.length > 0) { %>
                    <div> <h2 class="text-xl font-semibold mb-3">Galería de Imágenes</h2> <div class="grid grid-cols-3 sm:grid-cols-4 md:grid-cols-5 gap-2">
                            <% galeriaImagenes.slice(0, 9).forEach(img => { %> <picture>
                                    <source srcset="<%= img.storagePath %>" type="image/webp">
                                    <img src="<%= img.storagePath %>"
                                         onerror="this.onerror=null; this.src='https://via.placeholder.com/100x60.png?text=Error';"
                                         alt="<%= img.altText %>"
                                         title="<%= img.title || '' %>"
                                         class="w-full h-20 object-cover rounded cursor-pointer border hover:opacity-80 transition-opacity" loading="lazy"> </picture>
                            <% }) %>
                             <% if (galeriaImagenes.length > 9) { %>
                               <div class="w-full h-20 bg-gray-100 flex items-center justify-center rounded border text-xs text-gray-500 cursor-pointer hover:bg-gray-200">Ver más</div>
                            <% } %>
                        </div>
                    </div>
                <% } %>

                <div class="prose max-w-none pt-4 border-t"> <h2 class="text-xl font-semibold mb-2">Descripción</h2>
                    <p><%= propiedad.websiteData?.aiDescription || propiedad.descripcion || 'No hay descripción disponible.' %></p>
                </div>

                <div class="pt-4 border-t">
                    <h2 class="text-xl font-semibold mb-4">Comodidades</h2>
                    <div class="grid grid-cols-2 gap-4 text-sm">
                        <div class="flex items-center"><i class="fa-solid fa-bed w-5 mr-2 text-indigo-600"></i> <%= propiedad.numPiezas || '?' %> Dormitorios</div>
                        <div class="flex items-center"><i class="fa-solid fa-bath w-5 mr-2 text-indigo-600"></i> <%= propiedad.numBanos || '?' %> Baños</div>
                        <div class="flex items-center"><i class="fa-solid fa-users w-5 mr-2 text-indigo-600"></i> Capacidad <%= propiedad.capacidad %></div>
                        <% if (propiedad.equipamiento?.tinaja) { %><div class="flex items-center"><i class="fa-solid fa-hot-tub-person w-5 mr-2 text-indigo-600"></i> Tinaja Privada</div><% } %>
                        <% if (propiedad.equipamiento?.parrilla) { %><div class="flex items-center"><i class="fa-solid fa-burger w-5 mr-2 text-indigo-600"></i> Parrilla</div><% } %>
                        <% if (propiedad.equipamiento?.terrazaTechada) { %><div class="flex items-center"><i class="fa-solid fa-campground w-5 mr-2 text-indigo-600"></i> Terraza Techada</div><% } %>
                        <% if (propiedad.equipamiento?.juegoDeTerraza) { %><div class="flex items-center"><i class="fa-solid fa-chair w-5 mr-2 text-indigo-600"></i> Juego de Terraza</div><% } %>
                        <% if (propiedad.equipamiento?.piezaEnSuite) { %><div class="flex items-center"><i class="fa-solid fa-person-booth w-5 mr-2 text-indigo-600"></i> Pieza en Suite</div><% } %>
                        <% if (propiedad.equipamiento?.dosPisos) { %><div class="flex items-center"><i class="fa-solid fa-building w-5 mr-2 text-indigo-600"></i> Dos Pisos</div><% } %>
                    </div>
                </div>

                </div> <div class="lg:col-span-1">
                 <div class="sticky top-8">
                    <div class="bg-white p-6 rounded-lg shadow-lg">
                        <h3 class="text-xl font-bold text-gray-900 mb-4 border-b pb-2">Reserva tu Estadía</h3>
                        <form id="booking-form" class="space-y-4">
                            <input type="hidden" name="propiedadId" value="<%= propiedad.id %>">
                            <div>
                                <label for="fechaLlegada" class="block text-sm font-medium text-gray-700">Llegada</label>
                                <input type="date" name="fechaLlegada" id="fechaLlegada" class="form-input mt-1" required>
                            </div>
                            <div>
                                <label for="fechaSalida" class="block text-sm font-medium text-gray-700">Salida</label>
                                <input type="date" name="fechaSalida" id="fechaSalida" class="form-input mt-1" required>
                            </div>
                            <div>
                                <label for="personas" class="block text-sm font-medium text-gray-700">Huéspedes</label>
                                <input type="number" name="personas" id="personas" min="1" max="<%= propiedad.capacidad %>" class="form-input mt-1" required placeholder="Ej: 2" value="<%= prefill.personas %>">
                            </div>

                            <div id="price-summary" class="mt-6 border-t pt-4 space-y-2 hidden">
                                 <div class="flex justify-between text-sm text-gray-600">
                                    <span id="price-label">Calculando...</span>
                                    <span id="price-subtotal"></span>
                                 </div>
                                <div class="flex justify-between text-xl font-bold text-gray-900">
                                    <span>Total</span>
                                    <span id="price-total"></span>
                                </div>
                            </div>
                            <div id="price-loader" class="mt-6 text-center hidden">
                                <p class="text-sm text-gray-500">Calculando precio...</p>
                            </div>

                            <button type="submit" id="submit-button" class="btn w-full mt-6" disabled>
                                Continuar a la Reserva
                            </button>
                        </form>
                    </div>
                </div> </div> </div>
    </main>

    <%- include('partials/footer') %>

    <script src="/public/js/booking.js"
            data-propiedad-id="<%= propiedad.id %>"
            data-prefill-llegada="<%= prefill.fechaLlegada %>"
            data-prefill-salida="<%= prefill.fechaSalida %>"
            defer>
    </script>
</body>
</html>