<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <meta name="description" content="<%= description %>">
    <link rel="stylesheet" href="/public/css/website.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-50">
    <%- include('partials/header') %>

    <main class="container py-12">
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12">
            <div class="lg:col-span-2">
                <% if (propiedad.linkFotos) { %>
                    <img src="<%= propiedad.linkFotos %>" alt="Foto de <%= propiedad.nombre %>" class="w-full h-96 object-cover rounded-lg shadow-lg">
                <% } %>
                <div class="prose max-w-none mt-8">
                    <h1 class="text-4xl font-bold text-gray-900"><%= propiedad.nombre %></h1>
                    <p class="mt-2 text-lg text-gray-600"><strong>Capacidad:</strong> <%= propiedad.capacidad %> personas</p>
                    
                    <h2>Descripción</h2>
                    <p><%= propiedad.descripcion || 'No hay descripción disponible.' %></p>

                    <h2>Características</h2>
                    <ul>
                        <li><strong>Dormitorios:</strong> <%= propiedad.numPiezas || 'No especificado' %></li>
                        <li><strong>Baños:</strong> <%= propiedad.numBanos || 'No especificado' %></li>
                    </ul>
                </div>
            </div>

            <div class="lg:col-span-1">
                <div class="bg-white p-6 rounded-lg shadow-lg sticky top-8">
                    <h3 class="text-xl font-bold text-gray-900 mb-4">Reserva tu Estadía</h3>
                    <form id="booking-form">
                        <div class="space-y-4">
                            <div>
                                <label for="fechaLlegada" class="block text-sm font-medium text-gray-700">Llegada</label>
                                <input type="date" name="fechaLlegada" id="fechaLlegada" class="form-input mt-1" required value="<%= query.fechaLlegada || '' %>">
                            </div>
                            <div>
                                <label for="fechaSalida" class="block text-sm font-medium text-gray-700">Salida</label>
                                <input type="date" name="fechaSalida" id="fechaSalida" class="form-input mt-1" required value="<%= query.fechaSalida || '' %>">
                            </div>
                            <div>
                                <label for="personas" class="block text-sm font-medium text-gray-700">Huéspedes</label>
                                <input type="number" name="personas" id="personas" min="1" max="<%= propiedad.capacidad %>" class="form-input mt-1" required placeholder="Ej: 2" value="<%= query.personas || '' %>">
                            </div>
                        </div>

                        <div id="price-summary" class="mt-6 border-t pt-4 space-y-2 hidden">
                            <div class="flex justify-between text-gray-600">
                                <span id="price-label"></span>
                                <span id="price-subtotal"></span>
                            </div>
                            <div class="flex justify-between text-xl font-bold text-gray-900">
                                <span>Total</span>
                                <span id="price-total"></span>
                            </div>
                        </div>

                        <div id="price-loader" class="mt-6 text-center hidden">Calculando...</div>
                        
                        <button type="submit" id="submit-button" class="btn w-full mt-6" disabled>
                            Continuar a la Reserva
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>

    <script>
        const form = document.getElementById('booking-form');
        const fechaLlegadaEl = document.getElementById('fechaLlegada');
        const fechaSalidaEl = document.getElementById('fechaSalida');
        const personasEl = document.getElementById('personas');
        const priceSummaryEl = document.getElementById('price-summary');
        const priceLoaderEl = document.getElementById('price-loader');
        const submitButton = document.getElementById('submit-button');
        let currentPriceData = null;

        async function calcularPrecio() {
            const fechaLlegada = fechaLlegadaEl.value;
            const fechaSalida = fechaSalidaEl.value;
            currentPriceData = null;

            if (!fechaLlegada || !fechaSalida || new Date(fechaSalida) <= new Date(fechaLlegada)) {
                priceSummaryEl.classList.add('hidden');
                submitButton.disabled = true;
                return;
            }

            priceLoaderEl.classList.remove('hidden');
            priceSummaryEl.classList.add('hidden');
            submitButton.disabled = true;

            try {
                const response = await fetch('/propiedad/<%= propiedad.id %>/calcular-precio', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ fechaLlegada, fechaSalida })
                });

                if (!response.ok) {
                    const error = await response.json();
                    throw new Error(error.error || 'No se pudo calcular el precio. Puede que no haya tarifas para este período.');
                }
                
                const data = await response.json();
                currentPriceData = data;

                document.getElementById('price-label').textContent = `$${Math.round(data.totalPriceCLP / data.nights).toLocaleString('es-CL')} x ${data.nights} noches`;
                document.getElementById('price-subtotal').textContent = `$${data.totalPriceCLP.toLocaleString('es-CL')}`;
                document.getElementById('price-total').textContent = `$${data.totalPriceCLP.toLocaleString('es-CL')}`;
                
                priceSummaryEl.classList.remove('hidden');
                submitButton.disabled = false;
            } catch (error) {
                console.error(error);
                alert(error.message);
            } finally {
                priceLoaderEl.classList.add('hidden');
            }
        }
        
        form.addEventListener('submit', (e) => {
            e.preventDefault();
            if (!currentPriceData) {
                alert('Por favor, espera a que se calcule el precio.');
                return;
            }
            
            const params = new URLSearchParams({
                propiedadId: '<%= propiedad.id %>',
                fechaLlegada: fechaLlegadaEl.value,
                fechaSalida: fechaSalidaEl.value,
                personas: personasEl.value,
                noches: currentPriceData.nights,
                precioFinal: currentPriceData.totalPriceCLP
            });
            
            window.location.href = `/reservar?${params.toString()}`;
        });

        fechaLlegadaEl.addEventListener('change', calcularPrecio);
        fechaSalidaEl.addEventListener('change', calcularPrecio);
        
        // Calcular precio al cargar la página si las fechas ya están puestas
        if (fechaLlegadaEl.value && fechaSalidaEl.value) {
            calcularPrecio();
        }
    </script>

</body>
</html>