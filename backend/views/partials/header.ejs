<header class="bg-white shadow-md sticky top-0 z-50">
    <nav class="container flex items-center justify-between h-16">
        <a href="/" class="flex items-center space-x-2">
            <% if (empresa.websiteSettings?.theme?.logoUrl) { %>
                <img src="<%= empresa.websiteSettings.theme.logoUrl %>" alt="Logo de <%= empresa.nombre %>" class="h-10 w-auto max-w-[150px] object-contain">
            <% } else { %>
                <span class="text-xl font-bold"><%= empresa.nombre %></span>
            <% } %>
        </a>
        
        <div class="flex items-center space-x-4">
            <a href="#propiedades" class="btn-secondary hidden sm:inline-block">Ver Propiedades</a>
        </div>
    </nav>
</header>