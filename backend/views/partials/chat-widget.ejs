<% // backend/views/partials/chat-widget.ejs // Requires "empresa" object in locals/context %>
    <div id="concierge-widget" data-empresa-id="<%= empresa.id %>" class="fixed bottom-6 right-6 z-50 font-sans">

        <!-- Launch Button -->
        <button id="concierge-launch-btn"
            class="w-14 h-14 rounded-full shadow-lg flex items-center justify-center transition-transform hover:scale-110"
            style="background-color: var(--primary-color, #4F46E5);">
            <!-- Icon Chat -->
            <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z" />
            </svg>
        </button>

        <!-- Chat Window -->
        <div id="concierge-window"
            class="hidden flex-col absolute bottom-20 right-0 w-[350px] h-[500px] bg-white rounded-xl shadow-2xl border border-gray-200 overflow-hidden animate-fade-in-up">

            <!-- Header -->
            <div class="p-4 flex justify-between items-center text-white"
                style="background-color: var(--primary-color, #4F46E5);">
                <div class="flex items-center gap-2">
                    <div class="w-2 h-2 rounded-full bg-green-400 animate-pulse"></div>
                    <h3 class="font-bold text-sm">Concierge IA</h3>
                </div>
                <button id="concierge-close-btn" class="hover:text-gray-200">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd"
                            d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                            clip-rule="evenodd" />
                    </svg>
                </button>
            </div>

            <!-- Messages Area -->
            <div id="concierge-messages" class="flex-1 p-4 overflow-y-auto bg-gray-50 flex flex-col">
                <!-- Intro Message -->
                <div class="bg-gray-100 text-gray-800 p-3 rounded-lg mb-2 self-start max-w-[85%] text-sm">
                    Hola, bienvenido a <strong>
                        <%= empresa.nombre %>
                    </strong>. ¿En qué puedo ayudarte hoy?
                </div>
            </div>

            <!-- Input Area -->
            <div class="p-3 border-t border-gray-100 bg-white">
                <div class="flex gap-2">
                    <input type="text" id="concierge-input"
                        class="flex-1 border border-gray-300 rounded-lg px-3 py-2 text-sm focus:outline-none focus:border-blue-500"
                        placeholder="Escribe tu consulta...">
                    <button id="concierge-send-btn" class="p-2 rounded-lg text-white transition-colors hover:opacity-90"
                        style="background-color: var(--primary-color, #4F46E5);">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                            <path
                                d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z" />
                        </svg>
                    </button>
                </div>
                <div class="text-center mt-1">
                    <span class="text-[10px] text-gray-400">Powered by SuiteManager IA</span>
                </div>
            </div>
        </div>
    </div>

    <script src="/public/js/chat.js"></script>

    <style>
        @keyframes fade-in-up {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in-up {
            animation: fade-in-up 0.3s ease-out forwards;
        }
    </style>