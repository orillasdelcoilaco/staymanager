<%- /* backend/views/home.ejs */ %>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= empresa.websiteSettings?.seo?.homeTitle || empresa.nombre %></title>
    <meta name="description" content="<%= empresa.websiteSettings?.seo?.homeDescription || `Reservas en ${empresa.nombre}` %>">
    <link rel="stylesheet" href="/public/css/website.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-50">

    <%- include('partials/header') %>

    <main class="overflow-hidden">
        <% if (empresa.websiteSettings?.theme?.heroImageUrl) { %>
            <div class="hero-container">
                <picture>
                    <source srcset="<%= empresa.websiteSettings.theme.heroImageUrl %>" type="image/webp">
                    <img src="<%= empresa.websiteSettings.theme.heroImageUrl %>"
                         alt="<%= empresa.websiteSettings.theme.heroImageAlt || 'Imagen de portada' %>"
                         title="<%= empresa.websiteSettings.theme.heroImageTitle || empresa.nombre %>"
                         class="hero-image">
                </picture>
                <div class="hero-overlay"></div>
                <div class="hero-content">
                    <h1 class="text-4xl md:text-5xl font-bold">
                        <%= empresa.websiteSettings?.content?.homeH1 || empresa.nombre %>
                    </h1>
                    <p class="mt-4 text-lg md:text-xl max-w-2xl">
                        <%= empresa.websiteSettings?.content?.homeIntro || empresa.slogan || 'Tu mejor opción para descansar.' %>
                    </p>
                </div>
            </div>
        <% } else { %>
            <div class="bg-indigo-700 text-white py-12 px-4 text-center h-64 md:h-80 flex items-center justify-center">
                 <div>
                    <h1 class="text-4xl md:text-5xl font-bold">
                        <%= empresa.websiteSettings?.content?.homeH1 || empresa.nombre %>
                    </h1>
                    <p class="mt-4 text-lg md:text-xl max-w-2xl">
                        <%= empresa.websiteSettings?.content?.homeIntro || empresa.slogan || 'Tu mejor opción para descansar.' %>
                    </p>
                 </div>
            </div>
        <% } %>

        <div class="container py-12">
            <div class="bg-white p-6 rounded-lg shadow-lg mb-12">
                <form action="/" method="GET" class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
                    <div>
                        <label for="fechaLlegada" class="block text-sm font-medium text-gray-700">Llegada</label>
                        <input type="date" name="fechaLlegada" id="fechaLlegada" class="form-input mt-1" value="<%= locals.query && query.fechaLlegada ? query.fechaLlegada : '' %>">
                    </div>
                    <div>
                        <label for="fechaSalida" class="block text-sm font-medium text-gray-700">Salida</label>
                        <input type="date" name="fechaSalida" id="fechaSalida" class="form-input mt-1" value="<%= locals.query && query.fechaSalida ? query.fechaSalida : '' %>">
                    </div>
                    <div>
                        <label for="personas" class="block text-sm font-medium text-gray-700">Huéspedes</label>
                        <input type="number" name="personas" id="personas" min="1" class="form-input mt-1" placeholder="Ej: 2" value="<%= locals.query && query.personas ? query.personas : '' %>">
                    </div>
                    <button type="submit" class="btn w-full">Buscar Disponibilidad</button>
                </form>
            </div>

            <div id="propiedades">
                <h2 class="text-3xl font-bold text-gray-900 mb-8">
                    <% if (isSearchResult) { %>
                        Propiedades Disponibles
                    <% } else { %>
                        Nuestras Propiedades
                    <% } %>
                </h2>
                
                <% const formatCurrency = (value) => `$${(Math.round(value) || 0).toLocaleString('es-CL')}`; %>

                <% if (propiedadesParaMostrar.length > 0) { %>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                        <% propiedadesParaMostrar.forEach(prop => { %>
                            <%
                                const imagenTarjeta = prop.websiteData.cardImage;
                                const imagenUrl = imagenTarjeta.storagePath;
                                const altText = imagenTarjeta.altText || `Imagen de ${prop.nombre}`;
                                const titleText = imagenTarjeta.title || prop.nombre;
                                const descripcion = prop.websiteData?.aiDescription || prop.descripcion || 'Descripción no disponible.';
                                
                                // Calcular abono (10%) solo si hay precio
                                let abono = 0;
                                if (isSearchResult && prop.pricing && prop.pricing.totalPriceCLP > 0) {
                                    abono = prop.pricing.totalPriceCLP * 0.10;
                                }
                            %>
                            <div class="property-card">
                                <a href="/propiedad/<%= prop.id %>?fechaLlegada=<%= query.fechaLlegada || '' %>&fechaSalida=<%= query.fechaSalida || '' %>&personas=<%= query.personas || '' %>">
                                    <picture>
                                        <source srcset="<%= imagenUrl %>" type="image/webp">
                                        <img src="<%= imagenUrl %>" alt="<%= altText %>" title="<%= titleText %>" loading="lazy">
                                    </picture>
                                </a>
                                <div class="property-card-content">
                                    <div>
                                        <h3 class="property-card-title"><a href="/propiedad/<%= prop.id %>?fechaLlegada=<%= query.fechaLlegada || '' %>&fechaSalida=<%= query.fechaSalida || '' %>&personas=<%= query.personas || '' %>"><%= prop.nombre %></a></h3>
                                        <p class="property-card-details">Hasta <%= prop.capacidad %> personas</p>
                                        
                                        <% if (isSearchResult && prop.pricing && prop.pricing.totalPriceCLP > 0) { %>
                                            <div class="mt-2 text-sm border-t pt-2">
                                                <p class="text-gray-600">Total por <%= prop.pricing.nights %> noche(s):</p>
                                                <p class="text-lg font-bold text-gray-900"><%= formatCurrency(prop.pricing.totalPriceCLP) %></p>
                                                <p class="text-indigo-600 font-semibold">Reserva ahora abonando solo <%= formatCurrency(abono) %></p>
                                            </div>
                                        <% } %>
                                        <p class="card-description mt-2"><%= descripcion %></p> </div>
                                    <div class="text-right mt-4">
                                        <a href="/propiedad/<%= prop.id %>?fechaLlegada=<%= query.fechaLlegada || '' %>&fechaSalida=<%= query.fechaSalida || '' %>&personas=<%= query.personas || '' %>" class="btn-secondary btn-sm">Ver Detalles</a>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                <% } else { %>
                    <div class="text-center py-12 px-4 border-2 border-dashed rounded-lg">
                        <h3 class="text-xl font-semibold text-gray-700">No se encontraron propiedades</h3>
                        <p class="mt-2 text-sm text-gray-500">
                            <% if (isSearchResult) { %>
                                No hay propiedades disponibles que cumplan los criterios. Intenta con otras fechas.
                            <% } else { %>
                                <% if (propiedades.some(p => p.googleHotelData?.isListed)) { %>
                                    No hay propiedades configuradas con "Imagen Principal (Tarjeta/Home)" para mostrar. Revisa "Configurar Web Pública".
                                <% } else { %>
                                    Actualmente no hay propiedades marcadas para mostrarse en la web pública. Revisa "Gestionar Alojamientos".
                                <% } %>
                            <% } %>
                        </p>
                    </div>
                <% } %>
            </div>

        </div>
    </main>

    <%- include('partials/footer') %>

</body>
</html>