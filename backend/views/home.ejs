<%- /* backend/views/home.ejs */ %>
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= empresa.websiteSettings?.seo?.homeTitle || empresa.nombre %></title>
    <meta name="description" content="<%= empresa.websiteSettings?.seo?.homeDescription || `Reservas en ${empresa.nombre}` %>">
    <link rel="stylesheet" href="/public/css/website.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-50">

    <%- include('partials/header') %>

    <main class="overflow-hidden">
        <%# Sección Hero (sin cambios) %>
        <% if (empresa.websiteSettings?.theme?.heroImageUrl) { %>
            <div class="hero-container">
                <picture>
                    <source srcset="<%= empresa.websiteSettings.theme.heroImageUrl %>" type="image/webp">
                    <img src="<%= empresa.websiteSettings.theme.heroImageUrl %>"
                         alt="<%= empresa.websiteSettings.theme.heroImageAlt || 'Imagen de portada' %>"
                         title="<%= empresa.websiteSettings.theme.heroImageTitle || empresa.nombre %>"
                         class="hero-image">
                </picture>
                <div class="hero-overlay"></div>
                <div class="hero-content">
                    <h1 class="text-4xl md:text-5xl font-bold">
                        <%= empresa.websiteSettings?.content?.homeH1 || empresa.nombre %>
                    </h1>
                    <p class="mt-4 text-lg md:text-xl max-w-2xl">
                        <%= empresa.websiteSettings?.content?.homeIntro || empresa.slogan || 'Tu mejor opción para descansar.' %>
                    </p>
                </div>
            </div>
        <% } else { %>
            <div class="bg-indigo-700 text-white py-12 px-4 text-center h-64 md:h-80 flex items-center justify-center">
                 <div>
                    <h1 class="text-4xl md:text-5xl font-bold">
                        <%= empresa.websiteSettings?.content?.homeH1 || empresa.nombre %>
                    </h1>
                    <p class="mt-4 text-lg md:text-xl max-w-2xl">
                        <%= empresa.websiteSettings?.content?.homeIntro || empresa.slogan || 'Tu mejor opción para descansar.' %>
                    </p>
                 </div>
            </div>
        <% } %>

        <div class="container py-12">
            <%# Formulario de Búsqueda (sin cambios) %>
            <div class="bg-white p-6 rounded-lg shadow-lg mb-12">
                <form action="/" method="GET" class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
                    <div>
                        <label for="fechaLlegada" class="block text-sm font-medium text-gray-700">Llegada</label>
                        <input type="date" name="fechaLlegada" id="fechaLlegada" class="form-input mt-1" value="<%= locals.query && query.fechaLlegada ? query.fechaLlegada : '' %>">
                    </div>
                    <div>
                        <label for="fechaSalida" class="block text-sm font-medium text-gray-700">Salida</label>
                        <input type="date" name="fechaSalida" id="fechaSalida" class="form-input mt-1" value="<%= locals.query && query.fechaSalida ? query.fechaSalida : '' %>">
                    </div>
                    <div>
                        <label for="personas" class="block text-sm font-medium text-gray-700">Huéspedes</label>
                        <input type="number" name="personas" id="personas" min="1" class="form-input mt-1" placeholder="Ej: 2" value="<%= locals.query && query.personas ? query.personas : '' %>">
                    </div>
                    <button type="submit" class="btn w-full">Buscar Disponibilidad</button>
                </form>
            </div>

            <div id="propiedades">
                <h2 class="text-3xl font-bold text-gray-900 mb-8">
                    <% if (isSearchResult) { %>
                        Resultados de la Búsqueda
                    <% } else { %>
                        Nuestras Propiedades
                    <% } %>
                </h2>

                <% const formatCurrency = (value) => `$${(Math.round(value) || 0).toLocaleString('es-CL')}`; %>

                <% if (resultados.length > 0) { %>
                    <%# *** NUEVO: Usar lg:grid-cols-1 si hay un grupo, para darle ancho completo *** %>
                    <div class="grid grid-cols-1 md:grid-cols-2 <%= (isSearchResult && resultados.length === 1 && resultados[0].isGroup) ? 'lg:grid-cols-1' : 'lg:grid-cols-3' %> gap-8">
                        <% resultados.forEach(item => { %>
                            <% if (item.isGroup) { %>
                                <%# --- Renderizar Tarjeta de Grupo (Diseño Mejorado) --- %>
                                <%
                                    const grupo = item;
                                    const tienePrecioGrupo = grupo.combinedPricing && typeof grupo.combinedPricing.totalPriceCLP === 'number' && grupo.combinedPricing.totalPriceCLP > 0;
                                    let abonoGrupo = 0;
                                    if (tienePrecioGrupo) {
                                        abonoGrupo = grupo.combinedPricing.totalPriceCLP * 0.10; // 10%
                                    }
                                    const idsPropiedades = grupo.properties.map(p => p.id).join(',');
                                    const linkReservaGrupo = `/reservar?propiedadId=${idsPropiedades}&fechaLlegada=${query.fechaLlegada || ''}&fechaSalida=${query.fechaSalida || ''}&personas=${query.personas || ''}&noches=${grupo.combinedPricing.nights || ''}&precioFinal=${tienePrecioGrupo ? grupo.combinedPricing.totalPriceCLP : ''}`;
                                %>
                                <%# Contenedor principal de la tarjeta de grupo %>
                                <div class="bg-white rounded-lg shadow-xl border-2 border-indigo-600 overflow-hidden col-span-1 md:col-span-2 <%= (isSearchResult && resultados.length === 1 && resultados[0].isGroup) ? 'lg:col-span-1' : 'lg:col-span-3' %>">
                                    <div class="p-4 md:p-6">
                                        <h3 class="text-2xl font-bold text-gray-900 mb-2">
                                            <span class="text-green-600 mr-1">✓</span>
                                            ¡Grupo Sugerido para <%= query.personas %> personas!
                                        </h3>
                                        <p class="text-sm text-gray-600 mb-4">
                                            Encontramos la combinación perfecta de <%= grupo.properties.length %> propiedades para tu estadía.
                                        </p>

                                        <%# Grid: Resumen de Precio a la izquierda, Propiedades a la derecha %>
                                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                                            
                                            <%# Columna Resumen Precio y Acción %>
                                            <div class="md:col-span-1 border-r-0 md:border-r md:pr-6">
                                                <h4 class="text-lg font-semibold mb-2">Resumen del Grupo</h4>
                                                <% if (tienePrecioGrupo) { %>
                                                    <div class="space-y-2">
                                                        <div class="flex justify-between text-sm">
                                                            <span>Capacidad Total:</span>
                                                            <span class="font-semibold"><%= grupo.combinedCapacity %> personas</span>
                                                        </div>
                                                        <div class="flex justify-between text-sm">
                                                            <span>Total Noches:</span>
                                                            <span class="font-semibold"><%= grupo.combinedPricing.nights %></span>
                                                        </div>
                                                        <div class="border-t pt-2 mt-2">
                                                            <div class="flex justify-between text-lg font-bold text-gray-900">
                                                                <span>Total Estadía:</span>
                                                                <span><%= formatCurrency(grupo.combinedPricing.totalPriceCLP) %></span>
                                                            </div>
                                                            <div class="flex justify-between text-indigo-600 font-semibold text-sm">
                                                                <span>Abono (10%):</span>
                                                                <span><%= formatCurrency(abonoGrupo) %></span>
                                                            </div>
                                                        </div>
                                                        <a href="<%= linkReservaGrupo %>" class="btn w-full mt-4">
                                                            Reservar Grupo
                                                        </a>
                                                    </div>
                                                <% } else { %>
                                                    <p class="text-red-500">Error al calcular el precio del grupo.</p>
                                                <% } %>
                                            </div>

                                            <%# Columna Desglose Propiedades %>
                                            <div class="md:col-span-2">
                                                <h4 class="text-lg font-semibold mb-3">Propiedades Incluidas</h4>
                                                <div class="space-y-3">
                                                    <% grupo.properties.forEach(prop => { %>
                                                        <% const imgUrl = prop.websiteData?.cardImage?.storagePath || 'https://via.placeholder.com/150x100.png?text=Sin+Imagen'; %>
                                                        <div class="flex items-center space-x-3 p-2 bg-gray-50 rounded-lg">
                                                            <img src="<%= imgUrl %>" alt="<%= prop.nombre %>" class="w-20 h-14 object-cover rounded-md flex-shrink-0">
                                                            <div>
                                                                <h5 class="font-semibold text-sm text-gray-800"><%= prop.nombre %></h5>
                                                                <p class="text-xs text-gray-600">Capacidad: <%= prop.capacidad %> personas</p>
                                                                <p class="card-description text-xs text-gray-600 mt-1"><%= (prop.websiteData?.aiDescription || prop.descripcion || '').substring(0, 100) %>...</p>
                                                            </div>
                                                        </div>
                                                    <% }) %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            <% } else { %>
                                <%# --- Renderizar Tarjeta de Propiedad Individual (sin cambios) --- %>
                                <%
                                    const prop = item;
                                    const imagenTarjeta = prop.websiteData?.cardImage;
                                    const imagenUrl = imagenTarjeta?.storagePath || 'https://via.placeholder.com/400x300.png?text=Imagen+principal+no+disponible';
                                    const altText = imagenTarjeta?.altText || `Imagen de ${prop.nombre}`;
                                    const titleText = imagenTarjeta?.title || prop.nombre;
                                    const descripcion = prop.websiteData?.aiDescription || prop.descripcion || 'Descripción no disponible.';
                                    const tienePrecio = isSearchResult && prop.pricing && typeof prop.pricing.totalPriceCLP === 'number' && prop.pricing.totalPriceCLP > 0;
                                    let abono = 0;
                                    if (tienePrecio) {
                                        abono = prop.pricing.totalPriceCLP * 0.10;
                                    }
                                %>
                                <div class="property-card">
                                    <a href="/propiedad/<%= prop.id %>?fechaLlegada=<%= query.fechaLlegada || '' %>&fechaSalida=<%= query.fechaSalida || '' %>&personas=<%= query.personas || '' %>">
                                        <picture>
                                            <source srcset="<%= imagenUrl %>" type="image/webp">
                                            <img src="<%= imagenUrl %>" alt="<%= altText %>" title="<%= titleText %>" loading="lazy">
                                        </picture>
                                    </a>
                                    <div class="property-card-content">
                                        <div>
                                            <h3 class="property-card-title">
                                                <a href="/propiedad/<%= prop.id %>?fechaLlegada=<%= query.fechaLlegada || '' %>&fechaSalida=<%= query.fechaSalida || '' %>&personas=<%= query.personas || '' %>">
                                                    <% if (tienePrecio) { %>
                                                        <span class="text-green-600 mr-1">✓</span>
                                                    <% } %>
                                                    <%= prop.nombre %>
                                                </a>
                                            </h3>
                                            <p class="property-card-details">Hasta <%= prop.capacidad %> personas</p>

                                            <% if (tienePrecio) { %>
                                                <div class="mt-2 text-sm border-t pt-2">
                                                    <p class="text-gray-600">Total por <%= prop.pricing.nights %> noche(s):</p>
                                                    <p class="text-lg font-bold text-gray-900"><%= formatCurrency(prop.pricing.totalPriceCLP) %></p>
                                                    <% if (abono > 0) { %>
                                                         <p class="text-indigo-600 font-semibold">Reserva ahora abonando solo <%= formatCurrency(abono) %></p>
                                                    <% } %>
                                                </div>
                                            <% } else if (!isSearchResult) { %>
                                                <p class="card-description mt-2"><%= descripcion %></p>
                                            <% } %>

                                        </div>
                                        <div class="text-right mt-4">
                                            <a href="/propiedad/<%= prop.id %>?fechaLlegada=<%= query.fechaLlegada || '' %>&fechaSalida=<%= query.fechaSalida || '' %>&personas=<%= query.personas || '' %>" class="btn-secondary btn-sm">
                                                <%= tienePrecio ? 'Ver y Reservar' : 'Ver Detalles' %>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            <% } %>
                        <% }) %>
                    </div>
                <% } else { %>
                     <%# Mensaje "No encontrado" (sin cambios) %>
                    <div class="text-center py-12 px-4 border-2 border-dashed rounded-lg">
                        <h3 class="text-xl font-semibold text-gray-700">No se encontraron propiedades</h3>
                        <p class="mt-2 text-sm text-gray-500">
                            <% if (isSearchResult) { %>
                                No hay propiedades o combinaciones disponibles que cumplan los criterios. Intenta con otras fechas o menos huéspedes.
                            <% } else { %>
                                <%
                                const propiedadesListadasConImagen = resultados.some(p => !p.isGroup && p.googleHotelData?.isListed && p.websiteData?.cardImage?.storagePath);
                                const algunaPropiedadListada = resultados.some(p => !p.isGroup && p.googleHotelData?.isListed);
                                %>
                                <% if (algunaPropiedadListada && !propiedadesListadasConImagen) { %>
                                    No hay propiedades configuradas con "Imagen Principal (Tarjeta/Home)" para mostrar. Revisa "Configurar Web Pública".
                                <% } else if (!algunaPropiedadListada && !isSearchResult) { %>
                                    Actualmente no hay propiedades marcadas para mostrarse en la web pública. Revisa "Gestionar Alojamientos".
                                <% } else if (!isSearchResult) { %>
                                    Parece que no hay propiedades configuradas para mostrar.
                                <% } %>
                            <% } %>
                        </p>
                    </div>
                <% } %>
            </div>

        </div>
    </main>

    <%- include('partials/footer') %>

</body>
</html>